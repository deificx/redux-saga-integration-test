{
  "extends": ["airbnb-base", "plugin:redux-saga/recommended"],
  "env": {
    "node": true,
    "jest": true,
    "es6": true
  },
  "plugins": ["redux-saga"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "rules": {
    "arrow-parens": 0,
    "arrow-body-style": [2, "as-needed"],
    "comma-dangle": [2, "always-multiline"],
    "indent": 0,
    "function-paren-newline": ["error", "consistent"],
    "no-use-before-define": 0,
    "require-yield": 0
  }
}
